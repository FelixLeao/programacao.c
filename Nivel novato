#include <stdio.h>

int main() {

    // Carta 1
    char estado1 = 'A';
    char codigo1[4] = "A01";
    char nomeCidade1[100] = "Recife";
    int populacao1 = 1653461;
    float area1 = 218.84;
    float pib1 = 65.4;
    int pontosTuristicos1 = 20;

    // Carta 2
    char estado2 = 'B';
    char codigo2[4] = "B02";
    char nomeCidade2[100] = "Florianopolis";
    int populacao2 = 537213;
    float area2 = 674.00;
    float pib2 = 31.3;
    int pontosTuristicos2 = 28;

    // Exibição das cartas
    printf("\n--- Carta 1 ---\n");
    printf("Estado: %c\n", estado1);
    printf("Código: %s\n", codigo1);
    printf("Nome da Cidade: %s\n", nomeCidade1);
    printf("População: %d habitantes\n", populacao1);
    printf("Área: %.2f km²\n", area1);
    printf("PIB: %.2f bilhões de reais\n", pib1);
    printf("Número de Pontos Turísticos: %d\n", pontosTuristicos1);

    printf("\n--- Carta 2 ---\n");
    printf("Estado: %c\n", estado2);
    printf("Código: %s\n", codigo2);
    printf("Nome da Cidade: %s\n", nomeCidade2);
    printf("População: %d habitantes\n", populacao2);
    printf("Área: %.2f km²\n", area2);
    printf("PIB: %.2f bilhões de reais\n", pib2);
    printf("Número de Pontos Turísticos: %d\n", pontosTuristicos2);

    // =============================
    // COMPARAÇÃO DE CARTAS
    // =============================

    // Comparação definida diretamente no código
    // Aqui usamos o PIB como atributo de comparação
    printf("\n--- Comparação entre as Cartas (Atributo: PIB) ---\n");

    if (pib1 > pib2) {
        printf("A cidade vencedora é: %s (Carta 1)\n", nomeCidade1);
    } else if (pib2 > pib1) {
        printf("A cidade vencedora é: %s (Carta 2)\n", nomeCidade2);
    } else {
        printf("As duas cidades possuem o mesmo PIB!\n");
    }

    return 0;
}